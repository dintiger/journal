<h1>Edit Stuff Goes Here</h1>

<form action="/edit/<%= entry._id %>" method="post">
  <div class="form-control">
    <label>Entry Image</label>
    <input type="hidden" name="entryImage" value="<%= entry.entryImage %>" />
  </div>

  <div class="form-control">
    <label for="title">Title</label>
    <input
      type="text"
      placeholder="title"
      name="title"
      value="<%= entry.title %>"
    />
  </div>

  <div class="form-control">
    <label for="description">Description</label>
    <input
      type="text"
      placeholder="description"
      name="description"
      value="<%= entry.description %>"
    />
  </div>

  <div class="form-control">
    <label for="uploadDate">Upload Date</label>
    <input
      type="date"
      placeholder="uploadDate"
      name="uploadDate"
      value="<%= entry.uploadDate %>"
    />
  </div>

  <button type="submit">Done Edit</button>
</form>
